<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/error_message_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/error_message_main"
        android:textSize="@dimen/error_text_size_main"
        android:gravity="center"
        android:clickable="true"
        android:onClick="refreshMain"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/empty_message_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/empty_favorite_message_main"
        android:textSize="@dimen/error_text_size_main"
        android:gravity="center"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/loading_indicator_main"
        android:layout_width="@dimen/loading_indicator_size_main"
        android:layout_height="@dimen/loading_indicator_size_main"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</FrameLayout>
