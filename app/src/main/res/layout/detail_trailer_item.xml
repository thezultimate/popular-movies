<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trailer_imageview_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_play"
            android:background="@color/color_background_trailer_details" />

        <TextView
            android:id="@+id/trailer_textview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/body_padding_details"
            android:textSize="@dimen/body_text_size_details"
            android:background="@color/color_background_trailer_details"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>